<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
    
	<TextView android:id="@+id/error_view"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="?ErrorView"
		android:visibility="gone"
		android:text=""
		android:focusable="true"/>
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="#ffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ChatsTab_MainTab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/Chats"
            android:textColor="@color/tab_green"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/FriendsTab_MainTab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/Friends"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/GroupsTab_MainTab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/Groups"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/PersonalTab_MainTab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/Personal"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:textSize="16sp" />
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@drawable/navigation_bg_black" >

        <ImageView
            android:id="@+id/ActiveLineIv_MainTab"
            android:layout_width="20dip"
            android:layout_height="fill_parent"
            android:contentDescription="@drawable/navigation_bg_green"
            android:scaleType="fitXY"
            android:src="@drawable/navigation_bg_green" />
    </LinearLayout>
	
	<android.support.v4.view.ViewPager
	    android:id="@+id/ViewPager_MainTab"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1.0"/>
	
</LinearLayout>
